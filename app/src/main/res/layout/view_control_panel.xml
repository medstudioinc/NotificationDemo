<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <View
        android:id="@+id/view_panel_bg"
        android:layout_width="1240dp"
        android:layout_height="700dp"
        android:background="@drawable/control_panel_bg" />

    <ImageView
        android:id="@+id/view_panel_bar"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/view_panel_bg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="306dp"
        android:src="@drawable/control_panel_bar_bg"
        android:padding="20dp" />

    <View
        android:id="@+id/view_media_bar"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/control_panel_media_bar_bg" />

</RelativeLayout>