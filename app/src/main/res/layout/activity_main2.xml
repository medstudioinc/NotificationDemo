<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/notification_panel_color"
        android:orientation="vertical">


        <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@android:id/progress"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_indeterminate_horizontal_material_chj"
            android:maxHeight="20dp"
            android:progressDrawable="@drawable/progress_horizontal_material_chj" />

        <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@android:id/progress"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress_indeterminate_horizontal_material_chj"
            android:progressDrawable="@drawable/progress_horizontal_material_chj" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:text="添加一条新的ShortCut"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_remove_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:text="删除新添加的ShortCut"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_auto_start_change"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:text="自动添加和删除ShortCut"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="0.5"
            android:text="App's Name"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="1"
            android:text="ContentTitle"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="0.7"
            android:text="ContentText"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/tv_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alpha="0.7"
            android:text="ContentBigText"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>